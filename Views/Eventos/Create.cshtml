@model Simbora04.Models.Evento

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="/css/criarEventos.css" />
</head>
<body>


    <div class="loginbox">
        <h1>Cadastro de Evento</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="color: #C68585">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="margin: 0,5rem;" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: #C68585;">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" style="margin: auto;" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: #C68585">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" style="margin: 0,5rem; " />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: #C68585">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" style="margin: 0,5rem;" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: #C68585">
                <label asp-for="Degraca" class="control-label"></label>
                <input asp-for="Degraca" class="form-control" style="margin: 0,5rem;" />
                <span asp-validation-for="Degraca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar evento" class="btn1" /><br />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn1">Back to List</a>
            </div>
        </form>
        </div>       
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
</body>
</html>
